// третье задание
// возможно второй вариант быстрее выполнит операцию, так как будет искать сразу объединенную таблицу. 
// я мало работал с MySQL в основном создание записей+изменения, и поиском без объедененных таблиц

// четвертое задание
function search($q, $quantity)
{
    $couple=0;
    for ($i=0; $i<$quantity-1; $i++)
    {
        if ($q[$i]==$q[$i+1])
            $couple++;
    }
    return $couple;
}  
$array=array(1, 1, 2, 3, 4, -51, 12, 12, 12, -51);
$quantity=sizeof($array);
search($array, $quantity); // ответ 3
?>
